<Window x:Class="KT7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KT7"
        mc:Ignorable="d"
        Title="MasterPol" Height="450" Width="900" Icon="/Resources/Мастер пол.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F4E8D3">
            <Image Source="/Resources/Мастер пол.png" 
                   HorizontalAlignment="Left" Margin="210,0,0,0"></Image>
            <TextBlock Text="Мастер Пол" HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontSize="27"></TextBlock>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame"
               NavigationUIVisibility="Automatic"></Frame>
    </Grid>
</Window>
